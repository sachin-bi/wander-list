<% layout("/layouts/boilerplate")-%>

    <div class="row mt-3">
        <div class="col-6 offset-3">

            <h3>Listing Details:</h3>

            <div class="card">
                <img src="<%=listing.image%>" alt="listing image" class="card-img-top show-img">
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        <%= listing.description %> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                        <%= listing.location %> <br>
                        <%= listing.country %> <br>

                    </p>
                </div>
            </div>


      
            <div class="edit-delete-box ">

                <!-- <button class="btn "> -->
                    <a href="/listings/<%=listing.id%>/edit" class="btn btn-dark show-edit-btn offset-0">Edit</a>

                <!-- </button> -->

                
            

                <form action="/listings/<%=listing.id%>?_method=DELETE" method="post">
                    <button class="btn btn-dark delete-btn offset-5">Delete</button>
                </form>
            </div> <br> <br>

        </div>
    </div>